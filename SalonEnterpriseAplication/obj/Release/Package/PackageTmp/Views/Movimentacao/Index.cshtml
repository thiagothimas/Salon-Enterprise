
@{
    ViewBag.Title = "Index";
}

@model IList<SalonEnterpriseAplication.Models.Movimentacao>

@Html.ActionLink("Nova Movimentacao", "Form", "Movimentacao")

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Funcionario</th>
            <th>Valor</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var m in Model)
        {
        <tr>
            <td>@m.Id</td>
            @foreach (var func in ViewBag.Funcionarios)
            {
                if (m.FuncionarioId.Equals(func.Id))
                {
                    <td>@func.Nome</td>
                }
            }
            <td>@m.Valor</td>
            <td>@m.Tipo</td>
        </tr>
        }
    </tbody>
</table>
<a href="/Home/Index2" class="btn btn-primary">Menu Principal</a>

