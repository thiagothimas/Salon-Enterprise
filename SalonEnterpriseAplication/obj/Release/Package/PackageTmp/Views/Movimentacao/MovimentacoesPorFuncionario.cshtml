
@{
    ViewBag.Title = "MovimentacoesPorFuncionario";
}

@model SalonEnterpriseAplication.Models.MovimentacoesPorFuncionarioModel

@using (Html.BeginForm("MovimentacoesPorFuncionario", "Movimentacao", FormMethod.Get))
{
    @Html.LabelFor(m => m.FuncionarioId, "Funcionario")
    @Html.DropDownListFor(m => m.FuncionarioId, new SelectList(Model.funcionarios, "Id", "Nome"), "Escolha um Funcionario")

    <input type="submit" value="Buscar" />
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Funcionario</th>
            <th>Tipo</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.Movimentacoes)
        {
        <tr>
            @foreach (var func in ViewBag.Funcionarios)
            {
                if (m.FuncionarioId.Equals(func.Id))
                {
                    <td>@func.Nome</td>
                }
            }
            <td>@m.Tipo</td>
            <td>@m.Valor</td>
        </tr>
        }
    </tbody>
</table>
<a href="/Home/Index2" class="btn btn-primary">Menu Principal</a>