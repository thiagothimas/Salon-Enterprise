
<div class="titulo_cad">
    <center><h1>Cadastro do Funcionário</h1></center>
</div>

<form action="/Funcionario/Adiciona" method="post">
    @Html.AntiForgeryToken()

    <div class="form_geral">

        <div class="form_geral_2">

            <label for="nome">Nome:</label>
            <input id="nome" name="funcionario.Nome" class="form-control" />
            @*<input id="nome" name="funcionario.Nome" value="@ViewBag.Funcionario.Nome"/>*@
            @Html.ValidationMessage("funcionario.Nome")

            <label for="telefone">Telefone:</label>
            <input id="telefone" name="funcionario.Telefone" class="form-control" />
            @*<input id="telefone" name="funcionario.Telefone" value="@ViewBag.Funcionario.Telefone"/>*@
            @Html.ValidationMessage("funcionario.Telefone")

            <label for="DataDeNascimento">Data de Nascimento:</label>
            <input id="DataDeNascimento" name="funcionario.DataDeNascimento" class="form-control" />
            @*<input id="DataDeNascimento" name="funcionario.DataDeNascimento" value="@ViewBag.Funcionario.DataDeNascimento"/>*@
            @Html.ValidationMessage("funcionario.DataDeNascimento")

            <label for="endereco">Endereço:</label>
            <input id="endereco" name="funcionario.Endereco" class="form-control" />
            @*<input id="telefone" name="funcionario.Endereco" value="@ViewBag.Funcionario.Endereco"/>*@
            @Html.ValidationMessage("funcionario.Endereco")

        </div>

        <div class="form_geral_2">

            <label for="sexo">Sexo:</label>
            <input id="sexo" name="funcionario.Sexo" class="form-control" />
            @*<input id="sexo" name="funcionario.Sexo" value="@ViewBag.Funcionario.Sexo"/>*@
            @Html.ValidationMessage("funcionario.Sexo")

            <label for="rg">RG:</label>
            <input id="rg" name="funcionario.Rg" class="form-control" />
            @*<input id="telefone" name="funcionario.Rg" value="@ViewBag.Funcionario.Rg"/>*@
            @Html.ValidationMessage("funcionario.Rg")


            <label for="cpf">CPF:</label>
            <input id="cpf" name="funcionario.Cpf" class="form-control" />
            @*<input id="cpf" name="funcionario.Cpf" value="@ViewBag.Funcionario.Cpf"/>*@
            @Html.ValidationMessage("funcionario.Cpf")

            <label for="cargo">Cargo:</label>
            <input id="cargo" name="funcionario.Cargo" class="form-control" />
            @*<input id="cargo" name="funcionario.Cargo" value="@ViewBag.Funcionario.Cargo"/>*@
            @Html.ValidationMessage("funcionario.Cargo")



        </div>

    </div>

    <div class="btn-cad-voltar">

        <input type="submit" value="Cadastrar" />
        <a class="btn-voltar" href="/Funcionario/Index">Voltar</a>

    </div>




