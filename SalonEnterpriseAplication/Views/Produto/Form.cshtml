                @categoria.Nome
                </option>
            }
        </select>*@

    

        <div class="btn-cad-voltar">

            <input type="submit" value="Cadastrar" />
            <a href="/Produto/Index" class="btn-voltar" role="button">Voltar</a>

        </div>

</form>
