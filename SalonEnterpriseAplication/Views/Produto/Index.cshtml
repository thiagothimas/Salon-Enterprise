@model IList<SalonEnterpriseAplication.Models.Produto>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Produtos</th>
            <th>Preço</th>
            <th>Tipo</th>
            <th>Quantidade</th>
            <th>Valor Total</th>
            <th>Descrição</th>
            <th>Decrementar</th>
            <th>Remover</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
        <tr>
            <td>
                @*Tem valores no banco que o nome ou o Id esta vazio por isso esta dando erro*@
                @Html.ActionLink(produto.Nome, "Visualiza", new { id = produto.Id })
                @*Html.RouteLink(produto.Nome, "VisualizaProduto", new { id = produto.Id })*@
            </td>
            <td>@produto.Valor</td>
            <td>@produto.Tipo</td>
            <td>@produto.Quantidade</td>
            <td>
                @produto.ValorTotal
            </td>
            <td>@produto.Descricao</td>
            <td>
                <a class="fas fa-minus-circle" href="/Produto/DecrementaQtd/@produto.Id"></a>
            </td>
            <td>
                @*<a href="/Produto/DecrementaQtd/@produto.Id">Decrementar</a>*@
                @*<a href="#" onclick="decrementa(@produto.Id)">Decrementar</a>*@

                <a class="lixo far fa-trash-alt" href="/Produto/RemoverProduto/@produto.Id"></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a href="/Home/Index2" class="btn btn-primary">Menu Principal</a>
<a href="/Produto/Form" class="btn btn-primary">Novo Produto</a>

