@model IList<SalonEnterpriseAplication.Models.Servico>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome do Serviço</th>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Remover Produto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servico in Model)
        {
        <tr>

            <td>
                @*Tem valores no banco que o nome ou o Id esta vazio por isso esta dando erro*@
                @Html.ActionLink(servico.Nome, "Visualiza", new { id = servico.Id })
                @*Html.RouteLink(produto.Nome, "VisualizaProduto", new { id = produto.Id })*@
            </td>
            <td>@servico.Tipo</td>
            <td>@servico.Valor</td>
            <td>
                @*<a href="/Produto/DecrementaQtd/@produto.Id">Decrementar</a>*@
                @*<a href="#" onclick="decrementa(@produto.Id)">Decrementar</a>*@

                <a class="far fa-trash-alt" href="/Produto/RemoverProduto/@servico.Id"></a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/Home/Index" class="btn btn-primary">Menu Principal</a>
